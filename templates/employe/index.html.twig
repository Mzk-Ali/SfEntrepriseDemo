{% extends 'base.html.twig' %}

{% block title %}Liste des employés{% endblock %}

{% block body %}
    <h1>Liste des employés</h1>

    <a href="{{ path('new_employe')}}">Ajouter un employé</a><br><br>

    {% for employe in employes %}
        <a href="{{ path('show_employe', {'id': employe.id})}}"> {{ employe }} </a> {{ employe.entreprise.raisonSociale}}
        <a href="{{ path('edit_employe', {'id': employe.id}) }}">Edit</a>
        <a href="{{ path('delete_employe', {'id': employe.id}) }}">Supprimer</a>
        <br>
    {% endfor %}

{% endblock %}
