{% extends 'base.html.twig' %}

{% block title %}Liste des Entreprises{% endblock %}

{% block body %}
    <h1>Liste des entreprises</h1>

    <a href="{{ path('new_entreprise')}}">Ajouter une entreprise</a><br><br>

    {% for entreprise in entreprises %}
        <a href="{{ path('show_entreprise', {'id': entreprise.id}) }}"> {{ entreprise }} </a>
        <a href="{{ path('edit_entreprise', {'id': entreprise.id}) }}">Edit</a>
        <a href="{{ path('delete_entreprise', {'id': entreprise.id}) }}">Supprimer</a>
        <br>
    {% endfor %}

{% endblock %}
