{% extends 'base.html.twig' %}

{% block title %}Detail d'une entreprise{% endblock %}

{% block body %}
    <h1>Detail d'une entreprise</h1>

    <h2>{{ entreprise }}</h2>
    <p>
        Adresse : {{ entreprise.adresseComplete }} <br>
        Date de création : {{ entreprise.dateCreation | date("d-m-Y")}}
    </p>

    <h3>Liste des salariés</h3>
    {% if entreprise.employes | length > 0 %}
        <table>
            <thead>
                <tr>
                    <th>Employe</th>
                </tr>
            </thead>
            <tbody>
                {% for employe in entreprise.employes %}
                    <tr><td><a href="{{ path('show_employe', {'id':employe.id})}}">{{ employe}} </a><br></td></tr>
                {% endfor %}

            </tbody>
        </table>
    {% else %}
        <p>Aucun salariés dans cette entreprise</p>
    {% endif %}

{% endblock %}